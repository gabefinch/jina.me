.container {
  padding: {
    right: $gutter-width-large;
     left: $gutter-width-large;
  }

  @include breakpoint($tablet-large) {
    @extend %clearfix-tablet-large;
    margin: 0 auto;
    max-width: 102.4rem;
  }
}

.column {
  padding: $spacing-vertical-large 0;

  @include breakpoint($tablet-large) {
    float: left;
  }
}

<% data.layout.resolutions.each_with_index do |resolution, index| %>
  @include breakpoint($<%= resolution.target %>) {
    %clearfix-<%= resolution.target %> {
      &:before,
      &:after {
        display: table;
        content: " ";
      }

      &:after { clear: both; }
    }
  }
<% end %>
