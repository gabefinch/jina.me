<% data.layout.resolutions.each_with_index do |resolution, index| %>
  @include breakpoint($<%= resolution.target %>) {
    %clearfix-<%= resolution.target %> {
      &:before,
      &:after {
        @extend %display-table-<%= resolution.target %>;
        @extend %content-<%= resolution.target %>;
      }

      &:after { @extend %clear-both-<%= resolution.target %>; }
    }
  }
<% end %>
