<% data.layout.resolutions.each_with_index do |resolution, index| %>
  @include breakpoint($<%= resolution.target %>) {
    %visuallyhidden-<%= resolution.target %> {
      @extend %position-absolute-<%= resolution.target %>;
      @extend %margin-bleed-<%= resolution.target %>;
      @extend %border-reset-<%= resolution.target %>;
      @extend %padding-reset-<%= resolution.target %>;
      @extend %width-1-<%= resolution.target %>;
      @extend %height-1-<%= resolution.target %>;
      @extend %overflow-hidden-<%= resolution.target %>;
      @extend %clip-reset-<%= resolution.target %>;

      &.focusable {
        &:active,
        &:focus {
          @extend %margin-reset-<%= resolution.target %>;
          @extend %position-static-<%= resolution.target %>;
          @extend %width-auto-<%= resolution.target %>;
          @extend %height-auto-<%= resolution.target %>;
          @extend %overflow-visible-<%= resolution.target %>;
          @extend %clip-auto-<%= resolution.target %>;
        }
      }
    }
  }
<% end %>
