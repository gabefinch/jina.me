.list {
  &-menu,
  &-details { list-style: none; }

  &-details li { @extend %block-text; }

  &-menu { text-align: center; }
}

@include breakpoint($tablet-small) {
  .list {
    &-menu,
    &-details {
      margin: {
        right: -$gutter-width;
         left: -$gutter-width;
      }
      list-style: none;

      li {
        display: inline-block;
        margin-right: -0.4rem;
        padding: {
          right: $gutter-width;
           left: $gutter-width;
        }
      }
    }

    &-details li {
      width: 50%;
      vertical-align: top;

      &:nth-child(2) { padding-top: 0 }
    }
  }
}
