.list {
  &-menu,
  &-details { list-style: none; }

  &-details li { @extend %block-text; }

  &-menu { text-align: center; }
}

@include breakpoint($tablet-small) {
  .list {
    &-menu {
      margin: {
        right: -$gutter-width-small;
         left: -$gutter-width-small;
      }
      list-style: none;

      li {
        display: inline-block;
        margin-right: -0.4rem;
        padding: {
          right: $gutter-width-small;
           left: $gutter-width-small;
        }
      }
    }

    &-details span { white-space: nowrap; }
  }
}
