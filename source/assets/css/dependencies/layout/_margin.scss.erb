/* ---------------------------------------------------------------------------
/* MARGIN */

<% data.layout.resolutions.each_with_index do |resolution, index| %>
  @include breakpoint($<%= resolution.target %>) {
    %margin-reset-<%= resolution.target %>        { margin:        0; }
    %margin-reset-top-<%= resolution.target %>    { margin-top:    0; }
    %margin-reset-bottom-<%= resolution.target %> { margin-bottom: 0; }

    %margin-bleed-<%= resolution.target %> { margin: -1px; }

    %margin-auto-<%= resolution.target %> { margin: 0 auto; }

    %margin-hr-<%= resolution.target %> {
      @include rem('margin-top',    $base-line-height - 1);
      @include rem('margin-bottom', $base-line-height - 1);
    }

    %margin-block-<%= resolution.target %> {
      @include rem('margin-top',    $base-line-height / 2);
      @include rem('margin-bottom', $base-line-height / 2);
    }

    %margin-right-shrink-<%= resolution.target %> {
      @include rem('margin-right', -$gutter-width);
    }

    %margin-right-shrink-large-<%= resolution.target %> {
      @include rem('margin-right', -$gutter-width * 2);
    }

    %margin-bottom-<%= resolution.target %> {
      @include rem('margin-bottom', $base-line-height * 1.5);
    }

    %margin-left-shrink-<%= resolution.target %> {
      @include rem('margin-left',  -$gutter-width);
    }

    %margin-left-shrink-large-<%= resolution.target %> {
      @include rem('margin-left',  -$gutter-width * 2);
    }
  }
<% end %>
