/* ---------------------------------------------------------------------------
/* MAX-WIDTH */

<% data.layout.resolutions.each_with_index do |resolution, index| %>
  @include breakpoint($<%= resolution.target %>) {
    %max-width-full-<%= resolution.target %> { max-width: 100%; }

    %max-width-mini-<%= resolution.target %> {
      @include rem('max-width', 240px);
    }
  }
<% end %>
