/* ---------------------------------------------------------------------------
/* BORDER */

<% data.layout.resolutions.each_with_index do |resolution, index| %>
  @include breakpoint($<%= resolution.target %>) {
    %border-reset-<%= resolution.target %> { border: 0; }

    %border-bottom-width-<%= resolution.target %> {
      @include rem('border-bottom-width', 1px);
    }

    %border-bottom-solid-<%= resolution.target %> {
      border-bottom-style: solid;
    }

    %border-bottom-dotted-<%= resolution.target %> {
      border-bottom-style: dotted;
    }
  }
<% end %>
