/* ---------------------------------------------------------------------------
/* PADDING */

<% data.layout.resolutions.each_with_index do |resolution, index| %>
  @include breakpoint($<%= resolution.target %>) {
    %padding-reset-<%= resolution.target %>        { padding:        0; }
    %padding-reset-top-<%= resolution.target %>    { padding-top:    0; }
    %padding-reset-bottom-<%= resolution.target %> { padding-bottom: 0; }

    %padding-block-<%= resolution.target %> {
      @include rem('padding-top',    $base-line-height / 2);
      @include rem('padding-bottom', $base-line-height / 2);
    }

    %padding-block-large-<%= resolution.target %> {
      @include rem('padding-top',    $base-line-height * 2);
      @include rem('padding-bottom', $base-line-height * 2);
    }

    %padding-right-<%= resolution.target %> {
      @include rem('padding-right', $gutter-width);
    }

    %padding-left-<%= resolution.target %> {
      @include rem('padding-left',  $gutter-width);
    }

    %padding-right-large-<%= resolution.target %> {
      @include rem('padding-right', $gutter-width * 2);
    }

    %padding-left-large-<%= resolution.target %> {
      @include rem('padding-left',  $gutter-width * 2);
    }

    %padding-bottom-1-<%= resolution.target %> {
      @include rem('padding-bottom', 1px);
    }
  }
<% end %>
