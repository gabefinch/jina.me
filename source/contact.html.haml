      %li
        = label_tag :email
        %span.required (required)
        %br/
        = email_field_tag :email, size: 20, required: true

      %li
        = label_tag :organization
        %br/
        = text_field_tag :organization, size: 20

      %li
        = label_tag :website
        %br/
        = url_field_tag :website, size: 20

      %li
        = label_tag :subject
        %br/
        = select_tag :subject, :options => ['Just saying hello.', 'Iâ€™d like you to speak at my event.']

      %li
        = label_tag :message
