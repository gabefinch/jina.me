!!!5
%html.no-js(lang="en"){:class => data.page.head_classes}
  %head
    %meta(charset="utf-8")/
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")/
    %title
      = page_title
      | ₍˄ุ.͡˳̫.˄ุ₎
    = partial "layouts/head/meta"
    %meta(content="" name="description")/
    %meta(content="width=device-width, initial-scale=1" name="viewport")/
    = stylesheet_link_tag "jina"
    = javascript_include_tag "vendor/modernizr-2.8.3.custom"
    = javascript_include_tag  "//use.typekit.net/msm6abf.js"
    :javascript
      try{Typekit.load();}catch(e){}

  %body{class: page_classes}
    .message
      %p
        - data.speaking.upcoming.each_with_index do |event, index|
          - if index == 0
            See me speak at
            %strong= link_to event.name, event.link
            on
            = succeed "," do
              =event.date
            2014
            in
            = event.location

    .page
      .page-content
        .page-content-wrap
          %aside.complementary(role="complementary")

          %main.main(role="main")
            .main-content
              %nav.navigation(role="navigation")
                .navigation-content
                  %ul.list-menu
                    %li= link_to "About",        "/"
                    %li= link_to "Speaking",     "/speaking"
                    %li= link_to "Publications", "/publications"
                    %li= link_to "Featured",     "/featured"
                    %li= link_to "Contact",      "/contact"

              .body
                .body-content
                  - unless data.page.title == "Contact"
                    %h1= Typogruby.improve(data.page.title)
                  = Typogruby.improve(yield)

              %footer.contentinfo(role="contentinfo")
                .contentinfo-content
                  %hr/
                  %ul.list-menu
                    %li= link_to "Twitter",   "http://twitter.com/jina"
                    %li= link_to "Instagram", "http://instagram.com/jina"
                    %li= link_to "Dribbble",  "http://dribbble.com/jina"
                    %li= link_to "Github",    "http://github.com/jina"

                  %p
                    Copyright &copy; 2000&ndash;2014 Jina, all rights reserved.
                    = link_to "http://www.mediatemple.net#a_aid=501cfa93bffd3", title: "Hosted by Media Temple" do
                      (mt)

